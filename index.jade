html
  head
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js')
    //script(src='https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js')
    //script(src='https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js')
    link(rel='stylesheet prefetch', href='https://cdn.rawgit.com/Dogfalo/materialize/master/dist/css/materialize.min.css')
    //link(rel='stylesheet', href='https://cdn.datatables.net/1.10.12/css/dataTables.material.min.css')
    link(rel='stylesheet', href='style.min.css')
    link(rel='stylesheet', href='product.min.css')
    script(src='script.js')
  body
    nav.blue
      .navbar-fixed
        .nav-wrapper.center-align
          a(class='page-title' href="index.html") GPU Analyzer
    .container
        .row
          .col.s12.m3.l3
            .card
              .card-content
                h4 Filters
                div
                  span
                    .title.arrow-down(data-id="p") Price
                  ul(id="p-list")
                    li
                      input(type="checkbox", id="p_all", class="p_filter" checked)
                      label(for="p_all") All
                    li
                      input(type="checkbox", id="p_1", p-min="0", p-max="100", class="p_filter")
                      label(for="p_1") Less than $100
                    li
                      input(type="checkbox", id="p_2", p-min="100", p-max="250", class="p_filter")
                      label(for="p_2") $100 - $250
                    li
                      input(type="checkbox", id="p_3", p-min="250", p-max="500", class="p_filter")
                      label(for="p_3") $250 - $500
                    li
                      input(type="checkbox", id="p_4", p-min="500", p-max="750", class="p_filter")
                      label(for="p_4") $500 - $750
                div(id="model-filter-div")
                  .title.arrow-down(data-id="m") Model
                  ul(id="m-list")
          .col.s12.m9.l9
            .card
              .card-content
                .searchbar
                  input(type="text", id="searchFilter", placeholder="Search")
            .card
              .card-content
                table(id="main-table")
                  thead
                    tr
                      //th
                      th(class="custom-header" data-type='Name' data-dir='asc') Name
                      th(class="custom-header" data-type='GPU Name' data-dir='asc') Model
                      th(class="custom-header" data-type='Launch Price' data-dir='asc') Price
                      //th
                  tbody(id="fbody")
          
